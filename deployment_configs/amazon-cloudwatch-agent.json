{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "metrics": {
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_user",
          "cpu_usage_system"
        ],
        "metrics_collection_interval": 60,
        "totalcpu": true
      },
      "disk": {
        "measurement": [
          "used_percent"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "/"
        ]
      },
      "mem": {
        "measurement": [
          "mem_used_percent"
        ],
        "metrics_collection_interval": 60
      },
       "swap": {
         "measurement": [
          "swap_used_percent"
         ],
         "metrics_collection_interval": 60
       }
    },
    "append_dimensions": {
       "InstanceId": "${aws:InstanceId}"
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "/financial-app/nginx/access.log",
            "log_stream_name": "{instance_id}/access.log",
            "timestamp_format": "%d/%b/%Y:%H:%M:%S %z"
          },
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "/financial-app/nginx/error.log",
            "log_stream_name": "{instance_id}/error.log"
          },
          {
            "file_path": "/srv/financial-app/logs/gunicorn.log",
            "log_group_name": "/financial-app/app/gunicorn.log",
            "log_stream_name": "{instance_id}/gunicorn.log",
            "multi_line_start_pattern": "{timestamp}"
          },
          {
            "file_path": "/srv/financial-app/logs/celery-worker.log",
            "log_group_name": "/financial-app/app/celery-worker.log",
            "log_stream_name": "{instance_id}/celery-worker.log",
            "multi_line_start_pattern": "{timestamp}"
          }
        ]
      }
    },
    "log_stream_name": "{instance_id}"
  }
}
